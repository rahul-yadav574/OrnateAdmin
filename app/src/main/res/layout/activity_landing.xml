<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.evolve.ornateadmin.Activity.Landing">

    <include android:id="@+id/toolbar"  layout="@layout/toolbar_material"/>
    <Button

        android:id="@+id/add_new_pg"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_round_button"
        android:text="Add New PG"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/add_new_gh"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_round_button"
        android:text="Add New Guest House"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/pg_book_check"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_round_button"
        android:text="Pg Booking Check"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/pg_visit_check"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_round_button"
        android:text="Pg Visit Check"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/gh_book_check"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_round_button"
        android:text="Gh Booking Check"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>
    <Button
        android:id="@+id/list_house_check"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/landing_round_button"
        android:text="Property Check"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>


</LinearLayout>
